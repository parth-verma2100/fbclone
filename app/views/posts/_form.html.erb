<%= form_with model: post do |form| %>
  <div>
    <%= form.label :Content %><br>
    <%= form.text_area :content %><br>
    <% post.errors.full_messages_for(:content).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :Date %><br>
    <%= form.date_field :date , value: Date.today()%><br>
    <% post.errors.full_messages_for(:date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <h2><%= form.submit %></h2>
  </div>
  <ul>
   <li>
  <%= link_to "Home", root_path%></li>
  </ul>
<% end %>